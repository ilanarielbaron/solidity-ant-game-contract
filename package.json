{
  "name": "hardhat-boilerplate",
  "version": "1.1.0",
  "description": "Hardhat boilerplate",
  "keywords": [
    "ethereum",
    "smart",
    "contracts",
    "test",
    "solidity",
    "hardhat",
    "boilerplate"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/defi-wonderland/hardhat-boilerplate-ts.git"
  },
  "contributors": [
    "0xng (https://github.com/0xng)",
    "wei3erHase (https://github.com/wei3erHase)",
    "0xGorilla (https://github.com/0xGorilla)"
  ],
  "scripts": {
    "compile": "hardhat compile",
    "compile:test": "cross-env TEST=true hardhat compile",
    "deploy": "npx hardhat deploy",
    "fork:node": "cross-env FORK=true hardhat node",
    "fork:script": "cross-env FORK=true hardhat run",
    "postinstall": "husky install && yarn compile:test",
    "lint:check": "cross-env solhint 'contracts/**/*.sol' 'interfaces/**/*.sol' && cross-env prettier --check './**'",
    "lint:fix": "sort-package-json && cross-env prettier --write './**' && cross-env solhint --fix 'contracts/**/*.sol' 'interfaces/**/*.sol'",
    "test": "yarn compile:test && cross-env TEST=true mocha './test/e2e/**/*.spec.ts'"
  },
  "dependencies": {
    "@defi-wonderland/smock": "^2.0.7",
    "@openzeppelin/contracts": "4.3.1",
    "sort-package-json": "^1.52.0"
  },
  "devDependencies": {
    "@codechecks/client": "0.1.11",
    "@commitlint/cli": "13.1.0",
    "@commitlint/config-conventional": "13.1.0",
    "@nomiclabs/hardhat-ethers": "npm:hardhat-deploy-ethers@0.3.0-beta.10",
    "@nomiclabs/hardhat-etherscan": "2.1.6",
    "@nomiclabs/hardhat-waffle": "2.0.1",
    "@typechain/ethers-v5": "7.0.1",
    "@typechain/hardhat": "2.3.0",
    "@types/chai": "4.2.21",
    "@types/chai-as-promised": "7.1.4",
    "@types/mocha": "9.0.0",
    "@types/node": "16.9.1",
    "aws-sdk": "2.987.0",
    "chai": "4.3.4",
    "chai-as-promised": "7.1.1",
    "cross-env": "7.0.3",
    "dotenv": "10.0.0",
    "ethereum-waffle": "3.4.0",
    "ethers": "5.4.6",
    "hardhat": "2.6.4",
    "hardhat-deploy": "^0.9.1",
    "hardhat-preprocessor": "0.1.4",
    "husky": "7.0.2",
    "mocha": "9.1.1",
    "pinst": "2.1.6",
    "prettier": "2.4.0",
    "prettier-plugin-solidity": "1.0.0-beta.18",
    "solc-0.8": "npm:solc@0.8.7",
    "solhint": "3.3.6",
    "solhint-plugin-prettier": "0.0.5",
    "standard-version": "9.3.1",
    "ts-node": "10.2.1",
    "tsconfig-paths": "3.11.0",
    "typechain": "5.1.2",
    "typescript": "4.4.3"
  }
}
